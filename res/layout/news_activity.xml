<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:background="@color/gray_two"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!-- head开始 -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:id="@+id/top_liner"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            >
        <ImageView android:layout_width="25dp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:id="@+id/back"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:src="@drawable/button_selector_back"
                   android:layout_height="25dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text="政策新闻"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="16sp"
                android:id="@+id/top_cont"
                />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:id="@+id/top_sao"
                android:layout_margin="8dp"
                android:background="@drawable/button_selector_fenlei"
                />
    </RelativeLayout>
    <!-- head结束 -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/lunbo"
            android:layout_height="200dp" >
        <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#33000000"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal"
                android:paddingBottom="3dp"
                android:paddingTop="3dp" >

            <LinearLayout
                    android:id="@+id/viewGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:paddingBottom="1dp"
                    android:paddingTop="1dp" >
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="#f7f7f7">

                <TextView
                        android:id="@+id/news_new"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="8dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="最新信息"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                <TextView
                        android:id="@+id/news_record"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1.0"
                        android:padding="8dip"
                        android:gravity="center"
                        android:text="企业动态"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                <TextView
                        android:id="@+id/news_type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="8dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="行业新闻"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
                <TextView
                        android:id="@+id/news_zc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="8dip"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:text="政策新闻"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:layout_height="3dp">
        <TextView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:id="@+id/one_img"
                   android:background="@drawable/red_line"
                   android:layout_height="match_parent"/>
        <TextView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:id="@+id/two_img"
                   android:background="@drawable/gray_line"
                   android:layout_height="match_parent"/>
        <TextView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:id="@+id/three_img"
                   android:background="@drawable/gray_line"
                   android:layout_height="match_parent"/>
        <TextView android:layout_width="0dp"
                   android:layout_weight="1"
                   android:id="@+id/four_img"
                   android:background="@drawable/gray_line"
                   android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content">
        <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="fill_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">
        </FrameLayout>
    </LinearLayout>


</LinearLayout>