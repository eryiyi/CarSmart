<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:padding="8dp"
              android:background="@drawable/zhuye_item_select"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/item_no"
                  android:padding="8dp"
                  android:textSize="16sp"
                  android:ellipsize="end"
                  android:lineSpacingMultiplier="1.2"
                  android:textColor="@color/black_text_color"
                  android:text="订单号：64564515"
                  android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/item_title"
              android:padding="8dp"
              android:layout_below="@+id/item_no"
              android:textSize="16sp"
              android:lineSpacingMultiplier="1.2"
              android:textColor="@color/black_text_color"
              android:text="商品名称"
              android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="张三"
                  android:drawablePadding="8dp"
                  android:drawableLeft="@drawable/order_tx"
                  android:textSize="16sp"
                  android:id="@+id/item_name"
                  android:layout_below="@+id/item_title"
                  android:ellipsize="end"
                  android:lineSpacingMultiplier="1.2"
                  android:textColor="@color/black_text_color"
                  android:padding="8dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="131456431"
                  android:textSize="16sp"
                  android:drawablePadding="8dp"
                  android:drawableLeft="@drawable/order_tel"
                  android:id="@+id/item_mobile"
                  android:layout_toRightOf="@+id/item_name"
                  android:layout_below="@+id/item_title"
                  android:ellipsize="end"
                  android:lineSpacingMultiplier="1.2"
                  android:textColor="@color/black_text_color"
                  android:padding="8dp"
                  android:layout_height="wrap_content"/>

        <ImageView android:layout_width="120dp"
                   android:id="@+id/item_pic"
                   android:src="@drawable/head"
                   android:scaleType="centerCrop"
                   android:layout_below="@+id/item_mobile"
                   android:layout_height="140dp"/>
        <TextView android:layout_width="wrap_content"
                  android:text="￥89.00"
                  android:layout_toRightOf="@+id/item_pic"
                  android:id="@+id/item_money_one"
                  android:padding="8dp"
                  android:layout_below="@+id/item_name"
                  android:textSize="16sp"
                  android:textColor="@color/red"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="￥89.00"
                  android:id="@+id/item_money_two"
                  android:layout_toRightOf="@+id/item_pic"
                  android:padding="8dp"
                  android:layout_below="@+id/item_money_one"
                  android:textSize="16sp"
                  android:textColor="@color/red"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="￥89.00"
                  android:layout_toRightOf="@+id/item_pic"
                  android:id="@+id/item_money_three"
                  android:padding="8dp"
                  android:layout_below="@+id/item_money_two"
                  android:textSize="16sp"
                  android:textColor="@color/red"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="￥89.00"
                  android:layout_toRightOf="@+id/item_pic"
                  android:id="@+id/item_money_four"
                  android:padding="8dp"
                  android:layout_below="@+id/item_money_three"
                  android:textSize="16sp"
                  android:textColor="@color/red"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="订单完成"
                  android:id="@+id/item_status"
                  android:padding="8dp"
                  android:layout_below="@+id/item_money_four"
                  android:textSize="16sp"
                  android:textColor="@color/black_text_color"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="20198582"
                  android:id="@+id/item_time"
                  android:padding="8dp"
                  android:layout_below="@+id/item_status"
                  android:textSize="16sp"
                  android:textColor="@color/black_text_color"
                  android:layout_height="wrap_content"/>
    <View android:layout_width="match_parent"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:layout_below="@+id/item_time"
          android:id="@+id/view_seven"
          android:background="@drawable/gray_line"
          android:layout_height="0.5dp">
    </View>

    <LinearLayout android:layout_width="match_parent"
                  android:visibility="gone"
                  android:layout_below="@+id/view_seven"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="80dp"
                  android:layout_marginTop="10dp"
                  android:text="去评价"
                  android:layout_marginLeft="20dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginRight="8dp"
                  android:layout_marginBottom="10dp"
                  android:textColor="@color/black_text_color"
                  android:textSize="14sp"
                  android:id="@+id/button_one"
                  android:background="@drawable/button_selector_shape"
                  android:layout_height="30dp"/>
        <TextView android:layout_width="80dp"
                  android:text="去退款"
                  android:textSize="14sp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginBottom="10dp"
                  android:layout_marginRight="8dp"
                  android:layout_marginTop="10dp"
                  android:background="@drawable/button_selector_shape"
                  android:textColor="@color/black_text_color"
                  android:id="@+id/button_two"
                  android:layout_height="30dp"/>
    </LinearLayout>
</RelativeLayout>