<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/zhuye_item_select"
              android:layout_width="match_parent"
                android:padding="8dp"
              android:layout_height="match_parent">
    <TextView android:layout_width="wrap_content"
              android:text="车零通"
              android:id="@+id/text_one"
              android:textColor="@color/black_text_color"
              android:layout_height="wrap_content"/>
    <View android:layout_width="match_parent"
          android:layout_below="@+id/text_one"
          android:layout_marginTop="8dp"
          android:id="@+id/view_one"
          android:background="@color/gray_line_color"
          android:layout_height="0.5dp"></View>
    <ImageView android:layout_width="100dp"
               android:id="@+id/item_pic"
               android:src="@drawable/head"
               android:scaleType="centerCrop"
               android:layout_marginTop="8dp"
               android:layout_below="@+id/view_one"
               android:layout_height="80dp"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/item_cont"
              android:textColor="@color/black_text_color"
              android:textSize="16sp"
              android:lineSpacingMultiplier="1.2"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="8dp"
              android:text="这里是标题这里是标题这里是标题这里是标题这里是标题"
              android:layout_below="@+id/view_one"
              android:layout_toRightOf="@+id/item_pic"
              android:layout_height="wrap_content"/>
    <View android:layout_width="match_parent"
          android:layout_below="@+id/item_pic"
          android:layout_marginTop="8dp"
          android:id="@+id/view_two"
          android:background="@color/gray_line_color"
          android:layout_height="0.5dp"></View>
    <TextView android:layout_width="wrap_content"
              android:text="实付款：￥89.00"
              android:textColor="@color/black_text_color"
              android:layout_marginTop="8dp"
              android:padding="8dp"
              android:layout_below="@+id/view_two"
              android:id="@+id/item_prices"
              android:layout_height="wrap_content"/>
</RelativeLayout>