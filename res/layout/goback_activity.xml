<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/gray_two"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:id="@+id/top_liner"
            android:padding="5dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            >
        <ImageView android:layout_width="25dp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:id="@+id/back"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:src="@drawable/button_selector_back"
                   android:layout_height="25dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text="退货退款申请"
                android:textColor="@color/black_text_color"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="16sp"
                android:id="@+id/top_cont"
                />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:id="@+id/top_sao"
                android:layout_margin="8dp"
                android:background="@drawable/button_selector_fenlei"
                />
    </RelativeLayout>

    <View android:layout_width="match_parent"
          android:background="@color/white"
          android:layout_height="8dp"></View>
    <EditText
            android:id="@+id/cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:minHeight="100dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:gravity="top"
            android:hint="说点儿什么吧......"
            android:padding="10dp"
            android:textColor="#ff000000"/>
    <EditText android:layout_width="match_parent"
              android:paddingTop="10dp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
              android:paddingBottom="10dp"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:layout_marginTop="5dp"
              android:textSize="16sp"
              android:id="@+id/num"
              android:gravity="top"
              android:hint="退货数量"
              android:layout_marginBottom="10dp"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:text="确定"
            android:layout_marginTop="20dp"
            android:id="@+id/sure"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_selector_red_one"
            android:layout_height="45dp"/>
</LinearLayout>