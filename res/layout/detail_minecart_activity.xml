<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/gray_two"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/white"
                    android:id="@+id/top_liner"
                    android:layout_height="@dimen/height_top_bar">
        <ImageView android:layout_width="25dp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:id="@+id/back"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/button_selector_back"
                   android:layout_height="25dp"/>
        <TextView android:layout_width="wrap_content"
                  android:text="我的物流"
                  android:textColor="@color/black"
                  android:textSize="18sp"
                  android:layout_centerInParent="true"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/dark_gray"
            ></View>
    <TextView android:layout_width="match_parent"
              android:text="订单号：6982232332"
              android:textColor="@color/black_text_color"
              android:textSize="16sp"
              android:padding="20dp"
              android:id="@+id/detial_order_no"
              android:layout_height="wrap_content"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/dark_gray"
            ></View>

    <TextView android:layout_width="match_parent"
              android:text="感谢您在车零通购物"
              android:textColor="@color/black_text_color"
              android:textSize="16sp"
              android:padding="20dp"
              android:layout_height="wrap_content"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/dark_gray"
            ></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:padding="15dp"
                    android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:text="小刚"
                  android:id="@+id/detail_name"
                  android:drawablePadding="6dp"
                  android:drawableLeft="@drawable/order_tx"
                  android:textColor="@color/black_text_color"
                  android:padding="8dp"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:drawableLeft="@drawable/order_tel"
                  android:padding="8dp"
                  android:id="@+id/detail_tel"
                  android:textColor="@color/black_text_color"
                  android:text="1234564"
                  android:layout_toRightOf="@+id/detail_name"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_below="@+id/detail_tel"
                  android:padding="8dp"
                  android:text="流口水复健科拉萨的附件爱迪生"
                  android:textColor="@color/black_text_color"
                  android:id="@+id/detail_address"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/dark_gray"
            ></View>
    <TextView android:layout_width="wrap_content"
              android:text="车零通"
              android:textColor="@color/black_text_color"
              android:padding="15dp"
              android:layout_height="wrap_content"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/dark_gray"
            ></View>
    <RelativeLayout android:layout_width="match_parent"
                    android:padding="8dp"
                    android:layout_height="100dp">
        <ImageView android:layout_width="80dp"
                   android:id="@+id/detail_pic"
                   android:src="@drawable/head"
                   android:layout_height="80dp"/>
        <TextView android:layout_width="wrap_content"
                  android:text="sfjasfjads"
                  android:padding="8dp"
                  android:id="@+id/detail_cont"
                  android:lineSpacingMultiplier="1.2"
                  android:textColor="@color/black_text_color"
                  android:layout_toRightOf="@+id/detail_pic"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:id="@+id/detail_num"
                  android:text="12"
                  android:padding="8dp"
                  android:textColor="@color/black_text_color"
                  android:layout_alignParentBottom="true"
                  android:layout_toRightOf="@+id/detail_pic"
                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/dark_gray"
            ></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:layout_height="wrap_content">
            <TextView android:layout_width="0dp"
                      android:text="支付方式"
                      android:textColor="@color/black_text_color"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="0dp"
                      android:textColor="@color/black_text_color"
                      android:text="货到付款"
                      android:id="@+id/pay_method"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/dark_gray"
            ></View>
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:padding="15dp"
                  android:visibility="gone"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
                  android:text="配送方式"
                  android:textColor="@color/black_text_color"
                  android:layout_weight="1"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
                  android:textColor="@color/black_text_color"
                  android:text="德邦物流"
                  android:layout_weight="1"
                  android:id="@+id/wuliu"
                  android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>