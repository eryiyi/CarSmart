<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!-- head开始 -->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar"
            android:id="@+id/top_liner"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            >

        <ImageView android:layout_width="25dp"
                   android:layout_alignParentLeft="true"
                   android:layout_centerVertical="true"
                   android:id="@+id/back"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:src="@drawable/button_selector_back"
                   android:layout_height="25dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text="新闻详情"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="16sp"
                android:id="@+id/top_cont"
                />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:id="@+id/top_sao"
                android:layout_margin="8dp"
                android:background="@drawable/button_selector_fenlei"
                />
    </RelativeLayout>
    <com.xiaolong.CarSmart.widget.ReboundScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">
            <TextView android:layout_width="match_parent"
                      android:text="新闻"
                      android:layout_marginLeft="8dp"
                      android:id="@+id/news_detail_title"
                      android:padding="8dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:text="新闻"
                      android:layout_marginLeft="8dp"
                      android:id="@+id/news_detail_cont"
                      android:padding="8dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="match_parent"
                      android:text="新闻"
                      android:layout_marginRight="20dp"
                      android:gravity="right"
                      android:id="@+id/news_detail_dateline"
                      android:padding="8dp"
                      android:layout_height="wrap_content"/>
        </LinearLayout>

    </com.xiaolong.CarSmart.widget.ReboundScrollView>

</LinearLayout>